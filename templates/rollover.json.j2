{
  "policy": {
    "phases": {
      "hot": {
        "min_age": "0ms",
        "actions": {
          "rollover": {
            "max_age": "7d",
            "max_size": "3gb",
            "max_docs": 1000000
          },
          "set_priority": {
            "priority": null
          }
        }
      },
      "cold": {
        "min_age": "1d",
        "actions": {
          "freeze": {},
          "set_priority": {
            "priority": null
          }
        }
      },
      "delete": {
        "min_age": "30d",
        "actions": {
          "delete": {
            "delete_searchable_snapshot": true
          }
        }
      }
    }
  }
}
